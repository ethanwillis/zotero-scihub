{
  "name": "zotero-scihub",
  "version": "1.0.5",
  "description": "Download papers and books by DOI from Sci-Hub",
  "scripts": {
    "lint": "eslint . --ext .ts --cache --cache-location .eslintcache/",
    "prebuild": "npm run lint",
    "build": "tsc --noEmit && node esbuild.js",
    "postbuild": "zotero-plugin-zipup build zotero-scihub",
    "release": "zotero-plugin-release",
    "postversion": "git push --follow-tags"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/andrusha/zotero-scihub.git"
  },
  "author": {
    "name": "andrusha",
    "email": "example@example.com"
  },
  "bugs": {
    "url": "https://github.com/andrusha/zotero-scihub/issues"
  },
  "homepage": "https://github.com/andrusha/zotero-scihub",
  "xpi": {
    "name": "Sci-Hub Plugin for Zotero",
    "updateLink": "https://github.com/andrusha/zotero-scihub/releases/download/v{version}/zotero-scihub-{version}.xpi",
    "releaseURL": "https://github.com/andrusha/zotero-scihub/releases/download/release/",
    "iconURL": "chrome://zotero-scihub/skin/sci-hub-logo.svg"
  },
  "dependencies": {
    "@types/mocha": "^8.2.3",
    "@types/node": "^16.4.1",
    "@typescript-eslint/eslint-plugin": "^4.28.3",
    "@typescript-eslint/parser": "^4.28.3",
    "esbuild": "^0.12.15",
    "eslint": "^7.30.0",
    "eslint-plugin-import": "^2.23.4",
    "eslint-plugin-jsdoc": "^35.4.3",
    "eslint-plugin-prefer-arrow": "^1.2.3",
    "mkdirp": "^1.0.4",
    "rimraf": "^3.0.2",
    "ts-node": "^10.1.0",
    "typescript": "^4.3.5",
    "zotero-plugin": "^1.0.55"
  }
}
