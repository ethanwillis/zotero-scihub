{
    "compilerOptions": {
      "declaration": false,
      "allowUnreachableCode": false,
      "importHelpers": true,
      "target": "es2017",
      "disableSizeLimit": true,
      "module": "commonjs",
      "noImplicitAny": false,
      "removeComments": false,
      "preserveConstEnums": false,
      "sourceMap": false,
      "downlevelIteration": true,
      "lib": [ "es2017", "dom", "dom.iterable" ],
      "typeRoots": [
        "./typings",
        "./node_modules/@types"
      ]
    },
    "include": [
      "bin",
      "loader",
      "plugin",
      "script",
      "webpack",
      "content/**/*",
      "resource/**/*",
      "zotero-webpack/**/*",
      "setup/**/*",
      "typings/*",
      "*.ts"
    ],
    "exclude": [
      "node_modules",
      "**/*.spec.ts"
    ]
}

